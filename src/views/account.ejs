<!-- Include Head -->
<%- include('partials/head', {title: 'Crear cuenta'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	<div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Bienvenido, <%= user.first_name %></h2>
            </div>
        </div>
	</div>


	<h3>Mi Cuenta</h3>
        <div class="avatar">
            <img src="/images/users/<%= user.image %>" alt="Avatar">
        </div>
        <div class="cuenta">
            <div class="nombre">
                <p class="titulo">Nombre: </p>
                <p><%= user.first_name %></p>
            </div>
            <div class="apellido">
                <p class="titulo">Apellido: </p>
                <p><%= user.last_name %></p>
            </div>
            <div class="email">
                <p class="titulo">E-mail: </p>
                <p><%= user.email %></p>
            </div>
            <div class="domicilio">
                <p class="titulo">Domicilio: </p>
                <p><%= user.adress %></p>
            </div>
            <!-- <div class="categoria">
                <p class="titulo">Categoría: </p>
                <p>Administrador</p>
            </div> -->
            <div>
                <div class="boton-editar">
                    <a href="/cuenta/perfil/editar-perfil">Editar Perfil</a>
                </div>
            </div>
            <div>
                <div class="boton-cerrar-sesion">
                    <a href="/user/account/logout">Cerrar Sesión</a>
                </div>
            </div>
        </div>



	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>